pragma solidity ^0.8.0;

import { IIDCounter } from "./IIDCounter.sol";

abstract contract IDCounter is IIDCounter {
  uint40 internal _count;

  function count() external view override returns (uint40) {
    return _count;
  }

  function _next() internal virtual returns (uint40) {
    return _count++;
  }
}
